{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://w3id.org/agent-ontology/profiles/ontology.jsonld",
  "title": "Ontology Metadata Schema",
  "description": "Schema for ontology metadata and imports.",
  "type": "object",
  "@context": "https://w3id.org/agent-ontology/context/ontology.jsonld",

  "properties": {
    "id": { "type": "string" },
    "type": { "type": "string", "const": "owl:Ontology" },
    "title": { "type": "string" },
    "comment": { "type": "string" },
    "versionInfo": { "type": "string" },
    "imports": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
