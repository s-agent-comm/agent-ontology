{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://w3id.org/agent-ontology/profiles/execution-context.jsonld",
  "title": "Execution Context Schema",
  "description": "Defines the runtime context under which an action is executed.",
  "type": "object",
  "@context": "https://w3id.org/agent-ontology/context/execution-context.jsonld",

  "properties": {
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for the execution context."
    },
    "type": {
      "type": "string",
      "const": "core:ExecutionContext"
    },
    "hasEnvironment": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "ctx:ExecutionEnvironment" },
        "envType": { "type": "string" }
      },
      "required": ["id", "type", "envType"]
    },
    "hasSecurityContext": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "ctx:SecurityContext" },
        "usesTEE": { "type": "boolean" },
        "usesKeySlot": { "type": "string" }
      },
      "required": ["id", "type"]
    },
    "inputState": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "ctx:InputState" },
        "inputValue": { "type": "string" }
      },
      "required": ["id", "type"]
    },
    "outputState": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "ctx:OutputState" },
        "outputValue": { "type": "string" }
      },
      "required": ["id", "type"]
    }
  },
  "required": ["id", "type"]
}
