PREFIX : <https://w3id.org/agent-ontology/core#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX dcterms: <http://purl.org/dc/terms/>

<https://w3id.org/agent-ontology/core>
        dcterms:title         "Core Agent Ontology";
        dcterms:license       <https://www.w3.org/Consortium/Legal/2015/copyright-software-and-document>;
        dcterms:rightsHolder  "Semantic Agent Communication Community Group";
        dcterms:creator       "Tyson Chen (SlashLife AI)";
        dcterms:description   "The foundational ontology for AI Agent semantics, defining core concepts for communication, delegation, and execution.";
        dcterms:modified      "2025-11-10"^^xsd:date;
        owl:versionInfo       "0.2.0" .

:AgentEntity  rdf:type  owl:Class;
        rdfs:label    "AgentEntity";
        rdfs:comment  "A general semantic entity participating in agent communication, delegation, or execution." .

:Agent  rdf:type         owl:Class;
        rdfs:subClassOf  :AgentEntity;
        rdfs:label       "Agent";
        rdfs:comment     "An autonomous actor capable of perceiving, interpreting, or executing actions within a delegated semantic environment." .

:Capability  rdf:type  owl:Class;
        rdfs:label    "Capability";
        rdfs:comment  "A describable functional competence or operational capacity of an Agent." .

:Intent  rdf:type     owl:Class;
        rdfs:label    "Intent";
        rdfs:comment  "A semantic expression of purpose, objective, or expected action outcome." .

:Delegation  rdf:type  owl:Class;
        rdfs:label    "Delegation";
        rdfs:comment  "A structured semantic relation where one Agent authorizes another to act within a defined scope." .

:ExecutionContext  rdf:type  owl:Class;
        rdfs:label    "ExecutionContext";
        rdfs:comment  "A contextual frame describing conditions, trust anchors, or constraints associated with an Agent action." .

:Action  rdf:type     owl:Class;
        rdfs:label    "Action";
        rdfs:comment  "A concrete execution event initiated by an Agent, producing observable or verifiable consequences." .

:Artifact  rdf:type   owl:Class;
        rdfs:label    "Artifact";
        rdfs:comment  "A produced output or result generated through agent execution." .

:TraceEvent  rdf:type  owl:Class;
        rdfs:label    "TraceEvent";
        rdfs:comment  "A verifiable record linking an Agent, an Action, and contextual constraints." .

:Task   rdf:type      owl:Class;
        rdfs:label    "Task";
        rdfs:comment  "A well-defined action unit exchanged between Agents." .

:TaskNode  rdf:type   owl:Class;
        rdfs:label    "TaskNode";
        rdfs:comment  "Node in a task dependency graph." .

:TaskDependency  rdf:type  owl:Class;
        rdfs:label    "TaskDependency";
        rdfs:comment  "Dependency relation in a task graph." .

:hasIntent  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Agent;
        rdfs:range    :Intent;
        rdfs:label    "hasIntent";
        rdfs:comment  "Associates an Agent with its intended objective or semantic purpose." .

:hasCapability  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Agent;
        rdfs:range    :Capability;
        rdfs:label    "hasCapability";
        rdfs:comment  "Associates an Agent with a Capability it is able to perform." .

:delegatesTo  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Delegation;
        rdfs:range    :Agent;
        rdfs:label    "delegatesTo";
        rdfs:comment  "Indicates the Agent receiving delegated authority." .

:delegatedBy  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Delegation;
        rdfs:range    :Agent;
        rdfs:label    "delegatedBy";
        rdfs:comment  "Indicates the Agent granting delegated authority." .

:delegationScope  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Delegation;
        rdfs:range    :Capability;
        rdfs:label    "delegationScope";
        rdfs:comment  "Specifies the scope of allowed capabilities within a Delegation relation." .

:executesAction  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Agent;
        rdfs:range    :Action;
        rdfs:label    "executesAction";
        rdfs:comment  "Associates an Agent with an Action it performs." .

:producesArtifact  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Action;
        rdfs:range    :Artifact;
        rdfs:label    "producesArtifact";
        rdfs:comment  "Specifies the Artifact produced by an Action." .

:recordedIn  rdf:type  owl:ObjectProperty;
        rdfs:domain   :Action;
        rdfs:range    :TraceEvent;
        rdfs:label    "recordedIn";
        rdfs:comment  "Links an Action to its verifiable trace record." .

:contextOf  rdf:type  owl:ObjectProperty;
        rdfs:domain   :ExecutionContext;
        rdfs:range    :Action;
        rdfs:label    "contextOf";
        rdfs:comment  "Indicates that an ExecutionContext applies to a specific Action." .

:performsTask  rdf:type  owl:ObjectProperty;
        rdfs:label    "performsTask";
        rdfs:domain   :Agent;
        rdfs:range    :Task;
        rdfs:comment  "An Agent performs a given Task." .

:requiresCapability  rdf:type  owl:ObjectProperty;
        rdfs:label    "requiresCapability";
        rdfs:domain   :Task;
        rdfs:range    :Capability;
        rdfs:comment  "Declares that a Task requires a specific Capability." .

:hasSubtask  rdf:type  owl:ObjectProperty;
        rdfs:label    "hasSubtask";
        rdfs:domain   :Task;
        rdfs:range    :Task;
        rdfs:comment  "Represents hierarchical task decomposition." .

:hasDependency  rdf:type  owl:ObjectProperty;
        rdfs:label    "hasDependency";
        rdfs:domain   :TaskNode;
        rdfs:range    :TaskNode;
        rdfs:comment  "Represents a dependency between task nodes." .

:timestamp  rdf:type  owl:DatatypeProperty;
        rdfs:domain   :TraceEvent;
        rdfs:range    xsd:dateTime;
        rdfs:label    "timestamp";
        rdfs:comment  "Timestamp corresponding to the trace event." .

:description  rdf:type  owl:DatatypeProperty;
        rdfs:domain   :Artifact;
        rdfs:range    xsd:string;
        rdfs:label    "description";
        rdfs:comment  "A human-readable description of an Artifact." .
